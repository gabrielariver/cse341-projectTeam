{
  "openapi": "3.0.0",
  "info": {
    "title": "MyRecipe API",
    "version": "1.0.0",
    "description": "API to manage personal recipes and users."
  },
  "servers": [
    {
      "url": "https://cse341-projectteam.onrender.com"
    }
  ],
  "paths": {
    "/api/recipes": {
      "get": {
        "summary": "Get all recipes",
        "responses": {
          "200": {
            "description": "List of all recipes"
          }
        }
      },
      "post": {
        "summary": "Create a recipe",
        "security": [{ "oauth2": [] }],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": { "$ref": "#/components/schemas/Recipe" }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Recipe created"
          }
        }
      }
    },
    "/api/recipes/{id}": {
      "get": {
        "summary": "Get recipe by ID",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": { "type": "string" }
          }
        ],
        "responses": {
          "200": { "description": "Recipe found" },
          "404": { "description": "Not found" }
        }
      },
      "put": {
        "summary": "Update a recipe",
        "security": [{ "oauth2": [] }],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": { "type": "string" }
          }
        ],
        "responses": {
          "200": { "description": "Recipe updated" }
        }
      },
      "delete": {
        "summary": "Delete a recipe",
        "security": [{ "oauth2": [] }],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": { "type": "string" }
          }
        ],
        "responses": {
          "200": { "description": "Recipe deleted" }
        }
      }
    },
    "/api/users": {
      "get": {
        "summary": "Get all users",
        "responses": {
          "200": { "description": "List of users" }
        }
      },
      "post": {
        "summary": "Create a user",
        "security": [{ "oauth2": [] }],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": { "$ref": "#/components/schemas/User" }
            }
          }
        },
        "responses": {
          "201": { "description": "User created" }
        }
      }
    },
    "/api/users/{id}": {
      "get": {
        "summary": "Get user by ID",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": { "type": "string" }
          }
        ],
        "responses": {
          "200": { "description": "User found" },
          "404": { "description": "User not found" }
        }
      },
      "put": {
        "summary": "Update user by ID",
        "security": [{ "oauth2": [] }],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": { "type": "string" }
          }
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": { "$ref": "#/components/schemas/User" }
            }
          }
        },
        "responses": {
          "200": { "description": "User updated" }
        }
      },
      "delete": {
        "summary": "Delete user by ID",
        "security": [{ "oauth2": [] }],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": { "type": "string" }
          }
        ],
        "responses": {
          "200": { "description": "User deleted successfully" }
        }
      }
    }

  },
  "components": {
    "schemas": {
      "Recipe": {
  "type": "object",
  "properties": {
    "title": { "type": "string", "default": "Lasagna Bolognese" },
    "ingredients": {
      "type": "array",
      "items": { "type": "string" },
      "default": ["lasagna sheets", "ground beef", "tomato sauce", "onion", "béchamel", "cheese"]
    },
    "steps": {
      "type": "array",
      "items": { "type": "string" },
      "default": [
        "Cook ground beef with onion and tomato sauce",
        "Prepare béchamel sauce",
        "Layer pasta, meat, and béchamel in a tray",
        "Bake at 180°C for 35 minutes"
      ]
    },
    "prepTime": { "type": "integer", "default": 60 },
    "difficulty": { "type": "string", "default": "hard" },
    "category": { "type": "string", "default": "Lunch" }
  }
}
,
        "User": {
          "type": "object",
          "properties": {
            "username": { "type": "string", "default": "manuel.rojas" },
            "email": { "type": "string", "default": "manuel.rojas@example.com" },
            "fullName": { "type": "string", "default": "Manuel Alejandro Rojas Torres" },
            "role": { "type": "string", "default": "user" }
          }
        }
      }
    }
  }
