{
  "openapi": "3.0.0",
  "info": {
    "title": "MyRecipe API",
    "version": "1.0.0",
    "description": "API to manage personal recipes, users, categories and favorites."
  },
  "servers": [
    { "url": "https://cse341-projectteam.onrender.com" }
  ],
  "paths": {
    "/api/recipes": {
      "get": {
        "summary": "Get all recipes",
        "responses": {
          "200": {
            "description": "List of all recipes",
            "content": { "application/json": { "schema": { "type": "array", "items": { "$ref": "#/components/schemas/Recipe" } } } }
          }
        }
      },
      "post": {
        "summary": "Create a recipe",
        "security": [ { "cookieAuth": [] } ],
        "requestBody": {
          "required": true,
          "content": { "application/json": { "schema": { "$ref": "#/components/schemas/Recipe" } } }
        },
        "responses": {
          "201": { "description": "Recipe created" },
          "400": { "description": "Validation error" }
        }
      }
    },
    "/api/recipes/{id}": {
      "get": {
        "summary": "Get recipe by ID",
        "parameters": [
          { "name": "id", "in": "path", "required": true, "schema": { "type": "string" } }
        ],
        "responses": {
          "200": { "description": "Recipe found", "content": { "application/json": { "schema": { "$ref": "#/components/schemas/Recipe" } } } },
          "404": { "description": "Not found" }
        }
      },
      "put": {
        "summary": "Update a recipe",
        "security": [ { "cookieAuth": [] } ],
        "parameters": [
          { "name": "id", "in": "path", "required": true, "schema": { "type": "string" } }
        ],
        "requestBody": {
          "required": true,
          "content": { "application/json": { "schema": { "$ref": "#/components/schemas/Recipe" } } }
        },
        "responses": {
          "200": { "description": "Recipe updated" },
          "400": { "description": "Validation error" },
          "404": { "description": "Not found" }
        }
      },
      "delete": {
        "summary": "Delete a recipe",
        "security": [ { "cookieAuth": [] } ],
        "parameters": [
          { "name": "id", "in": "path", "required": true, "schema": { "type": "string" } }
        ],
        "responses": {
          "200": { "description": "Recipe deleted" },
          "404": { "description": "Not found" }
        }
      }
    },

    "/api/users": {
      "get": {
        "summary": "Get all users",
        "responses": {
          "200": {
            "description": "List of users",
            "content": { "application/json": { "schema": { "type": "array", "items": { "$ref": "#/components/schemas/User" } } } }
          }
        }
      },
      "post": {
        "summary": "Create a user",
        "security": [ { "cookieAuth": [] } ],
        "requestBody": {
          "required": true,
          "content": { "application/json": { "schema": { "$ref": "#/components/schemas/User" } } }
        },
        "responses": {
          "201": { "description": "User created" },
          "400": { "description": "Validation error" }
        }
      }
    },
    "/api/users/{id}": {
      "get": {
        "summary": "Get user by ID",
        "parameters": [
          { "name": "id", "in": "path", "required": true, "schema": { "type": "string" } }
        ],
        "responses": {
          "200": { "description": "User found", "content": { "application/json": { "schema": { "$ref": "#/components/schemas/User" } } } },
          "404": { "description": "User not found" }
        }
      },
      "put": {
        "summary": "Update user by ID",
        "security": [ { "cookieAuth": [] } ],
        "parameters": [
          { "name": "id", "in": "path", "required": true, "schema": { "type": "string" } }
        ],
        "requestBody": {
          "required": true,
          "content": { "application/json": { "schema": { "$ref": "#/components/schemas/User" } } }
        },
        "responses": {
          "200": { "description": "User updated" },
          "400": { "description": "Validation error" },
          "404": { "description": "User not found" }
        }
      },
      "delete": {
        "summary": "Delete user by ID",
        "security": [ { "cookieAuth": [] } ],
        "parameters": [
          { "name": "id", "in": "path", "required": true, "schema": { "type": "string" } }
        ],
        "responses": {
          "200": { "description": "User deleted successfully" },
          "404": { "description": "User not found" }
        }
      }
    },

    "/api/category": {
      "get": {
        "summary": "Get all categories",
        "responses": {
          "200": {
            "description": "List of categories",
            "content": { "application/json": { "schema": { "type": "array", "items": { "$ref": "#/components/schemas/Category" } } } }
          }
        }
      },
      "post": {
        "summary": "Create a new category",
        "security": [ { "cookieAuth": [] } ],
        "requestBody": {
          "required": true,
          "content": { "application/json": { "schema": { "$ref": "#/components/schemas/Category" } } }
        },
        "responses": {
          "201": { "description": "Category created" },
          "400": { "description": "Validation error" }
        }
      }
    },
    "/api/category/{id}": {
      "get": {
        "summary": "Get category by ID",
        "parameters": [
          { "name": "id", "in": "path", "required": true, "schema": { "type": "string" } }
        ],
        "responses": {
          "200": { "description": "Category found", "content": { "application/json": { "schema": { "$ref": "#/components/schemas/Category" } } } },
          "404": { "description": "Not found" }
        }
      },
      "put": {
        "summary": "Update category by ID",
        "security": [ { "cookieAuth": [] } ],
        "parameters": [
          { "name": "id", "in": "path", "required": true, "schema": { "type": "string" } }
        ],
        "requestBody": {
          "required": true,
          "content": { "application/json": { "schema": { "$ref": "#/components/schemas/Category" } } }
        },
        "responses": {
          "200": { "description": "Category updated" },
          "400": { "description": "Validation error" },
          "404": { "description": "Not found" }
        }
      },
      "delete": {
        "summary": "Delete category by ID",
        "security": [ { "cookieAuth": [] } ],
        "parameters": [
          { "name": "id", "in": "path", "required": true, "schema": { "type": "string" } }
        ],
        "responses": {
          "200": { "description": "Category deleted" },
          "404": { "description": "Not found" }
        }
      }
    },

    "/api/favorite": {
      "get": {
        "summary": "Get all favorites",
        "responses": {
          "200": {
            "description": "List of favorites",
            "content": { "application/json": { "schema": { "type": "array", "items": { "$ref": "#/components/schemas/Favorite" } } } }
          }
        }
      },
      "post": {
        "summary": "Add a recipe to favorites",
        "security": [ { "cookieAuth": [] } ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "required": ["recipeId"],
                "properties": {
                  "recipeId": { "type": "string", "example": "688a5f4936e232c11a993eff" }
                }
              }
            }
          }
        },
        "responses": {
          "201": { "description": "Favorite created" },
          "400": { "description": "Validation error" }
        }
      }
    },
    "/api/favorite/{id}": {
      "get": {
        "summary": "Get favorite by ID",
        "parameters": [
          { "name": "id", "in": "path", "required": true, "schema": { "type": "string" } }
        ],
        "responses": {
          "200": { "description": "Favorite found", "content": { "application/json": { "schema": { "$ref": "#/components/schemas/Favorite" } } } },
          "404": { "description": "Not found" }
        }
      },
      "put": {
        "summary": "Update favorite by ID",
        "security": [ { "cookieAuth": [] } ],
        "parameters": [
          { "name": "id", "in": "path", "required": true, "schema": { "type": "string" } }
        ],
        "requestBody": {
          "required": false,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "recipeId": { "type": "string", "example": "688a5f4936e232c11a993eff" }
                }
              }
            }
          }
        },
        "responses": {
          "200": { "description": "Favorite updated" },
          "400": { "description": "Validation error" },
          "404": { "description": "Not found" }
        }
      },
      "delete": {
        "summary": "Delete favorite by ID",
        "security": [ { "cookieAuth": [] } ],
        "parameters": [
          { "name": "id", "in": "path", "required": true, "schema": { "type": "string" } }
        ],
        "responses": {
          "200": { "description": "Favorite deleted" },
          "404": { "description": "Not found" }
        }
      }
    }
  },
  "components": {
    "securitySchemes": {
      "cookieAuth": {
        "type": "apiKey",
        "in": "cookie",
        "name": "connect.sid"
      }
    },
    "schemas": {
      "Recipe": {
        "type": "object",
        "properties": {
          "_id": { "type": "string" },
          "title": { "type": "string", "example": "Lasagna Bolognese" },
          "ingredients": { "type": "array", "items": { "type": "string" } },
          "steps": { "type": "array", "items": { "type": "string" } },
          "prepTime": { "type": "integer", "example": 60 },
          "difficulty": { "type": "string", "example": "hard" },
          "category": { "type": "string", "example": "Lunch" },
          "createdBy": { "type": "string", "example": "gabriela.rivera" }
        },
        "required": ["title", "ingredients", "steps"]
      },
      "User": {
        "type": "object",
        "properties": {
          "_id": { "type": "string" },
          "username": { "type": "string", "example": "manuel.rojas" },
          "email": { "type": "string", "example": "manuel.rojas@example.com" },
          "fullName": { "type": "string", "example": "Manuel Alejandro Rojas Torres" },
          "role": { "type": "string", "example": "user" }
        },
        "required": ["username", "email"]
      },
      "Category": {
        "type": "object",
        "properties": {
          "_id": { "type": "string" },
          "name": { "type": "string", "example": "Desserts" },
          "description": { "type": "string", "example": "Sweet dishes and baked goods" }
        },
        "required": ["name", "description"]
      },
      "Favorite": {
        "type": "object",
        "properties": {
          "_id": { "type": "string" },
          "recipeId": { "type": "string", "example": "688a5f4936e232c11a993eff" },
          "userId": { "type": "string", "example": "gabriela.rivera" },
          "addedAt": { "type": "string", "format": "date-time" }
        },
        "required": ["recipeId", "userId"]
      }
    }
  }
}
